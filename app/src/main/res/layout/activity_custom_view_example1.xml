<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<com.simonenfp.me.widget.CustomView2
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    custom:contentText="自定义View"
    android:layout_centerHorizontal="true"
    custom:contentTextSize="20sp"
    custom:contentTextColor="@color/colorPrimary"
    />
<com.simonenfp.me.widget.MyScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beauty1"
    android:orientation="vertical"
    >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color_purple"
            android:onClick="onScrollTv"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            />

</com.simonenfp.me.widget.MyScrollView>
</RelativeLayout>
